<h3>Create event</h3>
<td><%= form_with(model: @event, local: true) do |form| %>
	 <div class="field">
	    <%= form.label :title %><br>
	    <%= form.text_field :title %>
	  </div><br>
	  <div>
	    <%= form.hidden_field :user_id, value: @user.id %>
	  </div>
	  <div class="field">
	    <%= form.label :description %><br>
	    <%= form.text_area :description %>
	  </div><br>

	  <div class="field">
	    <%= form.label :start_date %><br>
	    <%= form.datetime_select :start_date %>
	  </div><br>

	   <div class="field">
	    <%= form.label :end_date %><br>
	    <%= form.datetime_select :end_date %>
	  </div> <br>
	  <div class="actions">
	    <%= form.submit %>
	  </div>
<% end %>


